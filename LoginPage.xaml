<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarberShopMaui.LoginPage"
             Title="LoginPage">
    <StackLayout x:Name="formLayout">
        <StackLayout Margin="20">

            <StackLayout>
                <Entry x:Name="emailEntry" Placeholder="Email" />
                <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" />
            </StackLayout>

            <Button Text="Login" Clicked="OnLoginClicked" BackgroundColor="#3498db" TextColor="White" Margin="0,10,0,0" />

            <Button Text="Show Stored Credentials" Clicked="OnShowCredentialsClicked" BackgroundColor="#2ecc71" TextColor="White" Margin="0,5,0,0" />

            <Label x:Name="statusLabel" Text="" TextColor="Red" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />

        </StackLayout>
    </StackLayout>
</ContentPage>